{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["DOM", "dom.iterable", "esnext"],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "@app/*": ["src/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/*.test.*", "**/*.stories.*", "**/serviceWorker.ts", "**/*.jpg"],
    "typedocOptions": {
        "mode": "modules",
        "out": "docs",
        "excludeNotExported": true,
        "exclude": ["**/*.test.ts", "**/*.stories.*", "**/*+(index|.spec|.e2e).ts"],
        "categoryOrder": ["components", "hooks", "*"]
    },
    "compileOnSave": true
}
